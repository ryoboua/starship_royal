{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 12",
    "compilerOptions": {
        "lib": [
            "es2019",
            "es2020.promise",
            "es2020.bigint",
            "es2020.string"
        ],
        "module": "commonjs",
        "target": "es2019",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "jsBackend",
        "removeComments": true,
        "noImplicitReturns": true,
        "allowUnreachableCode": false
    },
    "include": [
        "game/**/*.ts",
        "backend/**/*.ts",
        "shared/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}